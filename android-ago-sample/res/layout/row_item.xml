<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingTop="@dimen/margin_primary"
    android:paddingBottom="@dimen/margin_primary">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/defaultrttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_primary" />

    <com.github.curioustechizen.ago.sample.PrefixRttv
        android:id="@+id/prefixrttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_primary"/>

    <com.github.curioustechizen.ago.sample.FullyCustomRttv
        android:id="@+id/customrttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_primary" />


</LinearLayout>